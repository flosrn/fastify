{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false
  },

  "outDir": "./dist",
  "rootDir": "./src",

  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"],
    "~/*": ["./*"]
  },

  "include": ["src/**/*.ts"]
}
